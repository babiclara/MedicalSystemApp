@model MedicalSystemApp.Models.Prescription

@{
    ViewData["Title"] = "Edit Prescription";
}

<h1>Edit Prescription</h1>
<hr />

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label asp-for="MedicationName" class="form-label fw-bold"></label>
        <input asp-for="MedicationName" class="form-control" />
        <span asp-validation-for="MedicationName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Description" class="form-label fw-bold"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="DatePrescribed" class="form-label fw-bold"></label>
        <input asp-for="DatePrescribed" type="date" class="form-control" value="@Model.DatePrescribed.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DatePrescribed" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="PatientId" class="form-label fw-bold"></label>
        <select asp-for="PatientId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Patients, "Id", "LastName", Model.PatientId))">
            <option value="">-- Select a Patient --</option>
        </select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
