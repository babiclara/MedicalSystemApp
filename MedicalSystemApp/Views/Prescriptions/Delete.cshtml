@model MedicalSystemApp.Models.Prescription

@{
    ViewData["Title"] = "Delete Prescription";
}

<h1 class="mb-4">Delete Prescription</h1>

<div class="alert alert-warning" role="alert">
    <h4>Are you sure you want to delete this prescription?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@Model.MedicationName Prescription</h4>
        <dl class="row">
            <dt class="col-sm-3">Medication Name</dt>
            <dd class="col-sm-9">@Model.MedicationName</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Date Prescribed</dt>
            <dd class="col-sm-9">@Model.DatePrescribed.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Patient ID</dt>
            <dd class="col-sm-9">@Model.PatientId</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
