@model MedicalSystemApp.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<h1>Delete Patient</h1>
<hr />

<div class="alert alert-warning" role="alert">
    <h4>Are you sure you want to delete this patient?</h4>
</div>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-3">First Name</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>

        <dt class="col-sm-3">Last Name</dt>
        <dd class="col-sm-9">@Model.LastName</dd>

        <dt class="col-sm-3">OIB</dt>
        <dd class="col-sm-9">@Model.OIB</dd>

        <dt class="col-sm-3">Date of Birth</dt>
        <dd class="col-sm-9">@Model.DateOfBirth.ToShortDateString()</dd>

        <dt class="col-sm-3">Gender</dt>
        <dd class="col-sm-9">@Model.Gender</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
