@model IEnumerable<MedicalSystemApp.Models.Examination>

@{
    ViewData["Title"] = "Examinations";
}

<h1 class="mb-4">Examinations</h1>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(m => m.ExaminationDateTime)</th>
            <th>@Html.DisplayNameFor(m => m.ExaminationType)</th>
            <th>@Html.DisplayNameFor(m => m.PatientId)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.ExaminationDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@exam.ExaminationType</td>
                <td>@exam.PatientId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@exam.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@exam.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@exam.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Examination</a>
