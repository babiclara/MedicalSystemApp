@model MedicalSystemApp.Models.Examination

@{
    ViewData["Title"] = "Delete Examination";
}

<h1 class="mb-4">Delete Examination</h1>

<div class="alert alert-warning" role="alert">
    <h4>Are you sure you want to delete this examination?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@Model.ExaminationType Examination</h4>
        <dl class="row">
            <dt class="col-sm-3">Examination Date</dt>
            <dd class="col-sm-9">@Model.ExaminationDateTime.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Patient ID</dt>
            <dd class="col-sm-9">@Model.PatientId</dd>

            <dt class="col-sm-3">Examination Type</dt>
            <dd class="col-sm-9">@Model.ExaminationType</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
