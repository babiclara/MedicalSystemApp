@{
    Layout = "_Layout";
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="p-5 mb-4 bg-light rounded-3">
                <div class="container-fluid py-5">
                    <h1 class="display-5 fw-bold">Welcome to the Medical System App</h1>
                    <p class="col-md-8 fs-4">
                        Manage patients, medical records, examinations, prescriptions, and more.
                    </p>
                    <a class="btn btn-primary btn-lg" asp-controller="Patients" asp-action="Index">
                        Get Started
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    Patients
                </div>
                <div class="card-body text-center">
                    <a asp-controller="Patients" asp-action="Index" class="btn btn-outline-primary">Open</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    Medical Records
                </div>
                <div class="card-body text-center">
                    <a asp-controller="MedicalRecords" asp-action="Index" class="btn btn-outline-success">Open</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    Examinations
                </div>
                <div class="card-body text-center">
                    <a asp-controller="Examinations" asp-action="Index" class="btn btn-outline-warning text-dark">Open</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    Prescriptions
                </div>
                <div class="card-body text-center">
                    <a asp-controller="Prescriptions" asp-action="Index" class="btn btn-outline-info">Open</a>
                </div>
            </div>
        </div>
    </div>

   <div class="row">
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-header bg-secondary text-white">
                    Images
                </div>
                <div class="card-body text-center">
                    <a asp-controller="ExaminationImages" asp-action="Index" class="btn btn-outline-secondary">Open</a>
                </div>
            </div>
        </div>
    </div>
</div>
