@model IEnumerable<MedicalSystemApp.Models.MedicalRecord>

@{
    ViewData["Title"] = "Medical Records";
}

<h1 class="mb-4">Medical Records</h1>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(m => m.IllnessName)</th>
            <th>@Html.DisplayNameFor(m => m.StartDate)</th>
            <th>@Html.DisplayNameFor(m => m.EndDate)</th>
            <th>@Html.DisplayNameFor(m => m.PatientId)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.IllnessName</td>
                <td>@record.StartDate.ToShortDateString()</td>
                <td>@(record.EndDate?.ToShortDateString() ?? "Ongoing")</td>
                <td>@record.PatientId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@record.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@record.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@record.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Record</a>
