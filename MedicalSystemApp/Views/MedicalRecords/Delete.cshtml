@model MedicalSystemApp.Models.MedicalRecord

@{
    ViewData["Title"] = "Delete Medical Record";
}

<h1>Delete Medical Record</h1>
<hr />

<div class="alert alert-warning" role="alert">
    <h4>Are you sure you want to delete this medical record?</h4>
</div>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-3">Illness Name</dt>
        <dd class="col-sm-9">@Model.IllnessName</dd>

        <dt class="col-sm-3">Start Date</dt>
        <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-3">End Date</dt>
        <dd class="col-sm-9">@(Model.EndDate?.ToShortDateString() ?? "ongoing")</dd>

        <dt class="col-sm-3">Patient</dt>
        <dd class="col-sm-9">@Model.Patient?.LastName</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
