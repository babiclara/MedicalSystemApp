@model IEnumerable<MedicalSystemApp.Models.ExaminationImage>

@{
    ViewData["Title"] = "Examination Images";
}

<h1 class="mb-4">Examination Images</h1>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(m => m.ImagePath)</th>
            <th>@Html.DisplayNameFor(m => m.ExaminationId)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var img in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Content(img.ImagePath)" target="_blank">
                        View Image
                    </a>
                </td>
                <td>@img.ExaminationId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@img.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@img.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@img.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Image</a>
