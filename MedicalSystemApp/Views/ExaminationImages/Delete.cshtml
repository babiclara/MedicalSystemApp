@model MedicalSystemApp.Models.ExaminationImage

@{
    ViewData["Title"] = "Delete Examination Image";
}

<h1>Delete Examination Image</h1>
<hr />

<div class="alert alert-warning" role="alert">
    <h4>Are you sure you want to delete this examination image?</h4>
</div>

<dl class="row">
    <dt class="col-sm-3 fw-bold">Image Path</dt>
    <dd class="col-sm-9">
        <img src="@Model.ImagePath" alt="Examination Image" class="img-fluid" style="max-width: 300px;" />
        <br />
        @Model.ImagePath
    </dd>

    <dt class="col-sm-3 fw-bold">Examination Type</dt>
    <dd class="col-sm-9">@Model.Examination?.ExaminationType</dd>

    <dt class="col-sm-3 fw-bold">Examination Date</dt>
    <dd class="col-sm-9">@Model.Examination?.ExaminationDateTime.ToString("yyyy-MM-dd")</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
